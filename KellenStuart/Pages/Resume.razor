@code {
    private DateTime Now = DateTime.Now;
    private const string ShowOnPrint = "show-on-print";
    private const string HideOnPrint = "hide-on-print";
    private bool _hideAlerts = false;
    private const string WorkParagraph = "pl-3";

    private async Task FocusJp()
    {
        await Js.InvokeVoidAsync("FocusJP");
    }

    private async Task PrintResume()
    {
        await Task.Delay(20);
        await Js.InvokeVoidAsync("PrintResume");
        HideAlerts();
    }

    private void HideAlerts()
    {
        _hideAlerts = true;
    }

}